@{
    ViewBag.Title = "Login";
}

<div class="view_login" data-load-event="a.showLogin">
    <h1>Hi!</h1>
    <h1>Let's get started</h1>
    <div class="login_panel input-group input-group-lg">
        <input class="form-control login_username_input" placeholder="Username" />
        <input class="form-control login_password_input" placeholder="Password" />
        <div class="input-group-append">
            <button class="fa fa-sign-in btn" data-click-event="a.login"></button>
        </div>
    </div>
</div>